@using CS322_PZ_AnteaPrimorac5157.ViewModels
@model IEnumerable<ConfessionListViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Confessions</h1>

    @if (User?.Identity?.IsAuthenticated != true)
    {
        <p><a href="@Url.Action("Create", "Confession")" class="btn btn-primary">Submit Confession</a></p>
    }
</div>

<div class="container">
    @foreach (var confession in Model)
    {
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title">@confession.Title</h5>
                <p class="card-text">@confession.Content</p>
                <div class="text-muted">
                    Posted: @confession.DateCreated.ToString("MMM dd, yyyy HH:mm")
                    | Likes: @confession.Likes
                    | Comments: @confession.CommentCount
                </div>
                @if (User?.Identity?.IsAuthenticated == true)
                {
                    <div class="mt-2">
                        <button onclick="showEditAlert(@confession.Id)" class="btn btn-sm btn-warning">Edit</button>
                        <button onclick="showDeleteAlert(@confession.Id)" class="btn btn-sm btn-danger">Delete</button>
                    </div>
                }
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        function showEditAlert(id) {
            alert(`Edit confession ${id}`);
        }

        function showDeleteAlert(id) {
            alert(`Delete confession ${id}`);
        }
    </script>
}